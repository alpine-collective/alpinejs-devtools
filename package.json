{
    "name": "alpinejs-devtools",
    "version": "0.3.0",
    "private": true,
    "description": "DevTools extension for debugging Alpine.js applications.",
    "homepage": "https://github.com/alpine-collective/alpinejs-devtools",
    "scripts": {
        "start": "rollup -c -w",
        "start:ci": "NODE_ENV=test rollup -c",
        "build:dev": "rollup -c",
        "build": "NODE_ENV=production rollup -c",
        "watch": "npm start",
        "test": "jest",
        "cy:run": "cypress run",
        "cy:open": "cypress open",
        "format": "prettier './{packages/**/,cypress/**/*,}*.{js,html,css}' --write",
        "check:format": "prettier './{packages/**/,cypress/**/*,}*.{js,html,css}' -c",
        "prepackage": "npm run build",
        "package": "cd ./dist/chrome && zip -r ../alpine-devtools-$npm_package_version.zip . && rm -rf ../chrome"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.9.5",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@rollup/plugin-replace": "^2.3.4",
        "@tailwindcss/forms": "^0.2.1",
        "alpinejs": "^2.8.1",
        "cypress": "^6.6.0",
        "cypress-iframe": "^1.0.1",
        "edge.js": "^1.1.4",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.2",
        "prettier": "^2.2.0",
        "rollup": "^2.34.1",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-filesize": "^7.0.0",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-serve": "^1.1.0",
        "split-grid": "^1.0.9",
        "tailwindcss": "^2.0.1"
    },
    "dependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md,html}": "prettier --write"
    }
}
