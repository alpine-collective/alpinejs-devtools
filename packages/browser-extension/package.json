{
  "name": "browser-extension",
  "private": true,
  "version": "2.6.1",
  "description": "Alpine.js devtools with Chrome manifest v3 compatibility",
  "type": "module",
  "scripts": {
    "start": "npm run esbuild && NODE_ENV=dev vite",
    "start:main": "VITE_MAINLINE_PUBLISH=true npm start",
    "dev": "npm run esbuild && NODE_ENV=dev vite build",
    "dev:firefox": "TARGET=firefox npm run esbuild && NODE_ENV=dev vite build",
    "dev:main": "VITE_MAINLINE_PUBLISH=true npm run dev",
    "build": "NODE_ENV=production npm run esbuild && vite build",
    "postbuild": "node postbuild.js",
    "test": "node --experimental-strip-types --test **/*.test.ts",
    "typecheck": "tsc",
    "format": "prettier -w .",
    "esbuild": "node build.js && prettier -w manifest.json",
    "serve": "vite preview",
    "cy:run": "cypress run",
    "cy:open": "cypress open --e2e --browser=electron",
    "jules-test": "start-server-and-test start http://localhost:3000 cy:run"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.1.1",
    "@types/node": "22.13.13",
    "cypress": "14.5.4",
    "cypress-iframe": "1.0.1",
    "esbuild": "0.25.1",
    "linkedom": "0.18.11",
    "start-server-and-test": "^1.11.7",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vite-plugin-solid": "^2.11.6",
    "msw": "^2.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.3",
    "basecoat-css": "0.3.1",
    "solid-js": "^1.9.5",
    "split-grid": "^1.0.11",
    "tailwindcss": "4.1.3"
  },
  "msw": {
    "workerDirectory": [
      "assets"
    ]
  }
}
